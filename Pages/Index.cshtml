@page
@model IndexModel
@{
    ViewData["Title"] = "Ana Sayfa - Proje Takip Sistemi";
}

<!-- Hero Section -->
<section class="hero-section py-5" style="background: linear-gradient(135deg, var(--primary-color), var(--primary-light)); min-height: 60vh;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="hero-content text-white fade-in">
                    <h1 class="display-4 fw-bold mb-4 text-white">
                        <i class="fas fa-project-diagram me-3"></i>
                        Proje Takip Sistemi
                    </h1>
                    <p class="lead mb-4 opacity-90 text-white">
                        Modern ve kullanıcı dostu arayüzü ile projelerinizi kolayca yönetin, 
                        takip edin ve ekibinizle verimli bir şekilde çalışın.
                    </p>
                    <div class="d-flex flex-wrap gap-3">
                        <a href="/Projects" class="btn btn-light btn-lg text-black">
                            <i class="fas fa-plus me-2"></i>Yeni Proje
                        </a>
                        <a href="/Reports" class="btn btn-light btn-lg text-black">
                            <i class="fas fa-chart-line me-2"></i>Raporları Görüntüle
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image text-center">
                    <div class="position-relative">
                        <div class="hero-card bg-white rounded-modern shadow-xl p-4 slide-up">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary rounded-circle p-2 me-3">
                                    <i class="fas fa-chart-pie text-white"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0 fw-semibold">Proje Durumu</h6>
                                    <small class="text-muted">Anlık takip</small>
                                </div>
                            </div>
                            @{
                                var toplamProje = Model.ToplamProjeler;
                                var tamamlananProje = Model.TamamlananProjeler;
                                var ilerlemeYuzdesi = toplamProje > 0 ? Math.Round((double)tamamlananProje / toplamProje * 100, 1) : 0;
                            }
                            <div class="progress-info d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted">Proje Tamamlanma Oranı</span>
                                <span class="fw-bold text-primary">%@ilerlemeYuzdesi</span>
                            </div>
                            <div class="progress mb-3" style="height: 12px;">
                                <div class="progress-bar bg-gradient-primary" style="width: @ilerlemeYuzdesi%"></div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <small class="text-muted">%@ilerlemeYuzdesi Tamamlandı</small>
                                <small class="text-success fw-semibold">@(Model.AktifProjeler > 0 ? "Devam Ediyor" : "Tamamlandı")</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="stats-section py-5 bg-light">
    <div class="container">

        <div class="row g-4 mb-5">
            <div class="col-12">
                <h2 class="section-title mb-4">
                    <i class="fas fa-chart-bar me-2 text-primary"></i>
                    Proje İstatistikleri
                </h2>
            </div>
            
            <!-- Toplam Proje Sayısı -->
            <div class="col-xl-3 col-md-6">
                <div class="stat-card card border-0 shadow-modern h-100 hover-lift">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="stat-icon bg-primary-light">
                                <i class="fas fa-project-diagram text-primary"></i>
                            </div>
                            <div class="stat-trend @(Model.ToplamProjelerArtis >= 0 ? "text-success" : "text-danger")">
                                <i class="fas fa-arrow-@(Model.ToplamProjelerArtis >= 0 ? "up" : "down") me-1"></i>
                                <small>@(Model.ToplamProjelerArtis >= 0 ? "+" : "")@Model.ToplamProjelerArtis%</small>
                            </div>
                        </div>
                        <div class="stat-content">
                            <h3 class="stat-number mb-1">@Model.ToplamProjeler</h3>
                            <p class="stat-label mb-0">Toplam Proje</p>
                            <small class="text-muted">Tüm projeler</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Aktif Proje Sayısı -->
            <div class="col-xl-3 col-md-6">
                <div class="stat-card card border-0 shadow-modern h-100 hover-lift">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="stat-icon bg-success-light">
                                <i class="fas fa-play-circle text-success"></i>
                            </div>
                            <div class="stat-trend @(Model.AktifProjelerArtis >= 0 ? "text-success" : "text-danger")">
                                <i class="fas fa-arrow-@(Model.AktifProjelerArtis >= 0 ? "up" : "down") me-1"></i>
                                <small>@(Model.AktifProjelerArtis >= 0 ? "+" : "")@Model.AktifProjelerArtis%</small>
                            </div>
                        </div>
                        <div class="stat-content">
                            <h3 class="stat-number mb-1">@Model.AktifProjeler</h3>
                            <p class="stat-label mb-0">Aktif Proje</p>
                            <small class="text-muted">Devam eden</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tamamlanan Proje Sayısı -->
            <div class="col-xl-3 col-md-6">
                <div class="stat-card card border-0 shadow-modern h-100 hover-lift">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="stat-icon bg-info-light">
                                <i class="fas fa-check-circle text-info"></i>
                            </div>
                            <div class="stat-trend @(Model.TamamlananProjelerArtis >= 0 ? "text-success" : "text-danger")">
                                <i class="fas fa-arrow-@(Model.TamamlananProjelerArtis >= 0 ? "up" : "down") me-1"></i>
                                <small>@(Model.TamamlananProjelerArtis >= 0 ? "+" : "")@Model.TamamlananProjelerArtis%</small>
                            </div>
                        </div>
                        <div class="stat-content">
                            <h3 class="stat-number mb-1">@Model.TamamlananProjeler</h3>
                            <p class="stat-label mb-0">Tamamlanan</p>
                            <small class="text-muted">Başarılı</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bekleyen Proje Sayısı -->
            <div class="col-xl-3 col-md-6">
                <div class="stat-card card border-0 shadow-modern h-100 hover-lift">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="stat-icon bg-warning-light">
                                <i class="fas fa-clock text-warning"></i>
                            </div>
                            <div class="stat-trend @(Model.BekleyenProjelerArtis >= 0 ? "text-success" : "text-danger")">
                                <i class="fas fa-arrow-@(Model.BekleyenProjelerArtis >= 0 ? "up" : "down") me-1"></i>
                                <small>@(Model.BekleyenProjelerArtis >= 0 ? "+" : "")@Model.BekleyenProjelerArtis%</small>
                            </div>
                        </div>
                        <div class="stat-content">
                            <h3 class="stat-number mb-1">@Model.BekleyenProjeler</h3>
                            <p class="stat-label mb-0">Bekleyen</p>
                            <small class="text-muted">Planlanan</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</section>

<!-- Recent Activity Section -->
<section class="recent-activity-section py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="section-title mb-4">
                    <i class="fas fa-history me-2 text-primary"></i>
                    Son Aktiviteler
                </h2>
            </div>
            <div class="col-lg-8">
                <div class="activity-timeline" style="max-height: 400px; overflow-y: auto;">
                    @if (Model.SonAktiviteler.Any())
                    {
                        @foreach (var aktivite in Model.SonAktiviteler)
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker @(
                                    aktivite.LogType.Contains("Eklendi") ? "bg-success" :
                                    aktivite.LogType.Contains("Güncellendi") ? "bg-info" :
                                    aktivite.LogType.Contains("Silindi") ? "bg-danger" :
                                    "bg-primary"
                                )"></div>
                                <div class="timeline-content">
                                    <h6 class="mb-1">@aktivite.LogType</h6>
                                    <p class="text-muted mb-1">@aktivite.LogContent</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">@aktivite.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                                        <small class="text-muted"><i class="fas fa-user me-1"></i>@aktivite.Executor</small>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-history fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Henüz aktivite bulunmuyor.</p>
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card border-0 shadow-modern">
                    <div class="card-body p-4">
                        <h5 class="card-title mb-3">
                            <i class="fas fa-calendar-alt me-2 text-primary"></i>
                            Bu Hafta
                        </h5>
                        <div class="weekly-stats">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-muted">Yeni Projeler</span>
                                <span class="badge bg-success">@Model.HaftalikYeniProjeler</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-muted">Tamamlanan</span>
                                <span class="badge bg-info">@Model.HaftalikTamamlananProjeler</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-muted">İlerlemeler</span>
                                <span class="badge bg-warning">@Model.HaftalikIlerlemeler</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-muted">Aktif Kullanıcı</span>
                                <span class="badge bg-primary">@Model.AktifKullanicilar</span>
                            </div>
                        </div>
                        @{
                            var haftalikToplam = Model.HaftalikYeniProjeler + Model.HaftalikTamamlananProjeler + Model.HaftalikIlerlemeler;
                            var haftalikHedef = Math.Max(haftalikToplam, 10); // Dinamik hedef
                            var haftalikYuzde = haftalikHedef > 0 ? Math.Round((double)haftalikToplam / haftalikHedef * 100, 1) : 0;
                        }
                        <div class="progress mb-2" style="height: 8px;">
                            <div class="progress-bar bg-gradient" style="width: @haftalikYuzde%"></div>
                        </div>
                        <small class="text-muted">Bu hafta @haftalikToplam aktivite gerçekleştirildi</small>
                    </div>
                </div>
            </div>
        </div>
    
    </div>
</section>

<!-- Footer Info Section -->
<section class="footer-info-section py-4 bg-primary text-white">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="d-flex align-items-center">
                    <i class="fas fa-rocket me-3 fa-2x"></i>
                    <div>
                        <h6 class="mb-1">Proje Takip Sistemi</h6>
                        <small class="opacity-75">Modern ve verimli proje yönetimi çözümü</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <small class="opacity-75">
                    <i class="fas fa-clock me-1"></i>
                    Son güncelleme: @DateTime.Now.ToString("dd.MM.yyyy HH:mm")
                </small>
            </div>
        </div>
    </div>
</section>
