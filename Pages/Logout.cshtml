@page
@model ProjeTakip.Pages.LogoutModel
@{
    ViewData["Title"] = "Çıkış Yapılıyor...";
}

<div class="container-fluid d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="text-center">
        <div class="spinner-border text-primary mb-4" role="status" style="width: 3rem; height: 3rem;">
            <span class="visually-hidden">Yükleniyor...</span>
        </div>
        <h4 class="text-muted">Çıkış yapılıyor...</h4>
        <p class="text-muted">Lütfen bekleyiniz...</p>
    </div>
</div>

<script>
    // Otomatik olarak login sayfasına yönlendir
    setTimeout(function() {
        window.location.href = '/Login';
    }, 1500);
</script>