<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjeTakip</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- FontAwesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjeTakip.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light sticky-top">
            <div class="container-fluid px-4">
                <!-- Brand -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index">
                    <i class="fas fa-project-diagram me-2"></i>
                    <span class="fw-bold">ProjeTakip</span>
                </a>
                
                <!-- Mobile Toggle -->
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <i class="fas fa-bars"></i>
                </button>
                
                <!-- Navigation Links -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">
                                <i class="fas fa-home me-1"></i>Ana Sayfa
                            </a>
                        </li>
                        @if (Context.Session.GetInt32("UserRole") == 1)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Users/Index">
                                    <i class="fas fa-users me-1"></i>Kullanıcılar
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Projects/Index">
                                    <i class="fas fa-tasks me-1"></i>Projeler
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Sponsors/Index">
                                    <i class="fas fa-handshake me-1"></i>Sponsorlar
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Units/Index">
                                    <i class="fas fa-sitemap me-1"></i>Birimler
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Progress/Index">
                                    <i class="fas fa-chart-bar me-1"></i>İlerlemeler
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Reports/Index">
                                    <i class="fas fa-chart-line me-1"></i>Raporlar
                                </a>
                            </li>

                        }
                        @if (Context.Session.GetInt32("UserRole") == 2 || Context.Session.GetInt32("UserRole") == 3)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Projects/Index">
                                    <i class="fas fa-tasks me-1"></i>Projeler
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Sponsors/Index">
                                    <i class="fas fa-handshake me-1"></i>Sponsorlar
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Units/Index">
                                    <i class="fas fa-sitemap me-1"></i>Birimler
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Progress/Index">
                                    <i class="fas fa-chart-bar me-1"></i>İlerlemeler
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Reports/Index">
                                    <i class="fas fa-chart-line me-1"></i>Raporlar
                                </a>
                            </li>

                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy">
                                <i class="fas fa-shield-alt me-1"></i>Gizlilik
                            </a>
                        </li>
                    </ul>
                    
                    <!-- User Menu -->
                    @if (Context.Session.GetInt32("UserId") != null)
                    {
                        <div class="dropdown">
                            <button class="btn btn-outline-primary dropdown-toggle d-flex align-items-center" type="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle me-2"></i>
                                <span>@Context.Session.GetString("UserName")</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end shadow-modern">
                                <li class="dropdown-header">
                                    <div class="fw-semibold">@Context.Session.GetString("UserName")</div>
                                    <div class="small mt-1">
                                        @if (Context.Session.GetInt32("UserRole") == 1)
                                        {
                                            <span class="badge badge-success">Admin</span>
                                        }
                                        else if (Context.Session.GetInt32("UserRole") == 2)
                                        {
                                            <span class="badge badge-info">Proje Yöneticisi</span>
                                        }
                                        else if (Context.Session.GetInt32("UserRole") == 3)
                                        {
                                            <span class="badge badge-secondary">Geliştirici</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-warning">Bilinmeyen</span>
                                        }
                                    </div>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item text-danger" asp-area="" asp-page="/Logout">
                                        <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                                    </a>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>
    
    <!-- Main Content -->
    <main role="main" class="flex-grow-1">
        @RenderBody()
    </main>

    <!-- Modern Footer -->
    <footer class="bg-dark text-light py-4 mt-auto">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-project-diagram me-2 text-primary"></i>
                        <span class="fw-bold">ProjeTakip</span>
                        <span class="ms-2 text-muted">© 2024</span>
                    </div>
                </div>
                <div class="col-md-6 text-md-end mt-2 mt-md-0">
                    <small class="text-muted">
                        <a class="text-decoration-none text-primary" asp-area="" asp-page="/Privacy">
                            <i class="fas fa-shield-alt me-1"></i>Gizlilik Politikası
                        </a>
                        <span class="mx-2">|</span>
                        Modern proje yönetimi sistemi
                    </small>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Modern navigation enhancements
        document.addEventListener('DOMContentLoaded', function() {
            // Add active class to current page nav link
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');
            
            navLinks.forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                }
            });
            
            // Smooth scroll for anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>